<div class="container-fluid">

  <div class="text-primary text-center">
    <h1>Random Workout Generator</h1>
  </div>

  <div class="app">

    <button class="button btn btn-default">New Exercise</button>
    <div class="exercise"></div>
    <div class="positiveText"></div>


  </div> <!-- app -->

  <div class="row">
    <div class="col-xs-6">
      <button class="btn btn-block btn-success btn-xlg center-block"> DONE </button>
    </div>
    <div class="col-xs-6">
      <button class="btn btn-block btn-danger btn-xlg center-block"> SKIP </button>
    </div>
  </div>

</div> <!-- container-fluid -->

<script type="text/javascript">

  $( document ).ready(function() {
    generate();

    function generate(){

      var exercises = ["10 Pushups", "10 Lunges per leg", "20 Squats", "30 Mountain Climbers", "20 Jumping Jacks"];

      randomExercise = exercises[Math.floor(Math.random()*exercises.length)];
      $('.exercise').text(randomExercise);
    }

    function positiveText(){

      var text = ["Nice!", "Good job!", "Keep it up!", "Marvelous!"];
      var animationEnd = "webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend"

      randomText = text[Math.floor(Math.random()*text.length)];
      /*$('.positiveText').text(randomText);*/
      $('.positiveText').text(randomText).removeClass("hidden").addClass("animated fadeOutUp").one(animationEnd, function() {
        $(this).removeClass("animated fadeOutUp").addClass("hidden");
      });

    }

  $(".button").on( "click", function() {
      positiveText();
      generate();
  });

  });

</script>